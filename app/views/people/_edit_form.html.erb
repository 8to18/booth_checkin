<%= form_for(@person) do |f| %>

  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "Error") %> Prohibited this Person from Being Saved.</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <% if msg == @person.errors.full_messages.last %>
          <li><%= msg %></li>
        <% else %>
          <li><%= msg %>, </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="column-left">
  <div class="field">
    <%= f.label :first_name, "First Name:" %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last Name:" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email, "Email:" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone: " %><br />
    <%= f.text_field :phone %>
  </div>
</div>
<div id="column-right">
  <div class="field">
    <%= f.label :school, "School: "%><br />
    <%= f.text_field :school %>
  </div>
  <div class="field">
    <%= f.label :state, "State: " %><br />
    <%= f.select :state, options_for_select(us_states, :selected => @person.state)%>
  </div>
  <div class="field">
    <%= f.label :title, "Title: " %><br />
    <%= f.select :title, options_for_select(all_titles, :selected => @person.title) %>
  </div>
</div>
  <div class="actions">
    <%= f.submit " " %>
  </div>
<% end %>
